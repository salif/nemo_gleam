# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true

[*.{gleam,js,mjs,json,sh}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 80

[*.gleam]
indent_style = space
indent_size = 3

[justfile]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
